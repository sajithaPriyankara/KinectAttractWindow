<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:n="clr-namespace:KinectAttractWindow.Navigation"
    xmlns:vm="clr-namespace:KinectAttractWindow.ViewModels"
    xmlns:v="clr-namespace:KinectAttractWindow.View"
    xmlns:c="clr-namespace:KinectAttractWindow.Controls">

    <DataTemplate DataType="{x:Type n:NavigationManager}">
        <c:NavigationBanner />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:AttractScreenViewModel}">
        <v:AttractScreenView />
    </DataTemplate>
    
    <DataTemplate DataType="{x:Type vm:HomeScreenViewModel}">
        <v:HomeScreenView />
    </DataTemplate>

</ResourceDictionary>